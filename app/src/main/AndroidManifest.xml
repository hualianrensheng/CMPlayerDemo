<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.cmplayerdemo">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.CMBaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mvp.view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".mvp.view.activity.HomeActivity" />
        <activity android:name=".mvp.view.activity.AppDetailActivity"></activity>
        <activity android:name=".mvp.view.activity.AppMoreRecommendActivity"></activity>
        <activity android:name=".mvp.view.activity.GalleryActivity"></activity>

        <activity android:name=".mvp.view.activity.WebViewActivity"></activity>

        <activity android:name=".mvp.view.activity.CategoryNecessaryActivity"></activity>
        <activity android:name=".mvp.view.activity.CategoryNewActivity"></activity>
        <activity android:name=".mvp.view.activity.CategorySubjectActivity"></activity>
        <activity android:name=".mvp.view.activity.CategorySubscribeActivity"></activity>
        <activity android:name=".mvp.view.activity.CategoryToolActivity"></activity>

        <activity android:name=".mvp.view.activity.ApkManagementActivity"></activity>
        <activity android:name=".mvp.view.activity.CleanCacheActivity"></activity>
        <activity android:name=".mvp.view.activity.InstallAppInfoActivity"></activity>
    </application>

</manifest>